[colors]
white = #ffffff
light-gray = #e0e0e0
mid-gray = #5b5b5b
dark = #171717
darker = #131313
active-bg = #262626

[bar/main]
monitor = {{ .primary_monitor }}
bottom = true
height = 25
width = 100%
background = ${colors.darker}
foreground = ${colors.white}
font-0 = "Terminess Nerd Font Propo:size=12"
font-1 = "Terminess Nerd Font Mono:size=12"
padding-left = 0
padding-right = 0
module-margin = 2
line-size = 1

modules-left = workspaces
modules-center =
modules-right = disk pulseaudio network battery0 battery1 date time hostuser

; ------------------------------------------------------------
; MODULES
; ------------------------------------------------------------

[module/workspaces]
type = internal/xworkspaces

label-active = %index%
label-active-background = ${colors.active-bg}
label-active-foreground = ${colors.white}
label-active-font = 1
label-active-padding = 1

label-occupied = %index%
label-occupied-foreground = ${colors.light-gray}
label-occupied-padding = 1

label-empty = %index%
label-empty-foreground = ${colors.mid-gray}
label-empty-padding = 1

[module/disk]
type = internal/fs
mount-0 = /home
interval = 30
format-mounted = <label-mounted>
label-mounted =  %free%
label-mounted-foreground = ${colors.light-gray}
label-mounted-padding = 2

[module/date]
type = internal/date
interval = 60
time = %b %d, %Y
label =  %time%
label-foreground = ${colors.white}
label-padding = 1
timezone = America/Indiana/Indianapolis

[module/time]
type = internal/date
interval = 5
time = %I:%M %p
label =  %time%
label-foreground = ${colors.white}
label-padding = 1
timezone = America/Indiana/Indianapolis

[module/battery0]
type = internal/battery
battery = BAT0
full-at = 95
poll-interval = 1

format-charging = <label-charging>
label-charging = %percentage%% 󰂄
format-discharging = <label-discharging> <ramp-capacity>
label-discharging = %percentage%%

ramp-capacity-0 = 󰂎
ramp-capacity-1 = 󰁼 
ramp-capacity-2 = 󰁽
ramp-capacity-3 = 󰂁
ramp-capacity-4 = 󰁹

[module/battery1]
type = internal/battery
battery = BAT1
full-at = 95
poll-interval = 1

format-charging = <label-charging>
label-charging = %percentage%% 󰂄
format-discharging = <label-discharging> <ramp-capacity>
label-discharging = %percentage%%

ramp-capacity-0 = 󰂎
ramp-capacity-1 = 󰁼 
ramp-capacity-2 = 󰁽
ramp-capacity-3 = 󰂁
ramp-capacity-4 = 󰁹

[module/network]
type = internal/network
interface = {{ .network_interface }}
interval = 3.0

format-connected = <label-connected>
format-disconnected = <label-disconnected>

label-connected =  %signal%%
label-disconnected = 

label-connected-foreground = ${colors.white}
label-disconnected-foreground = ${colors.mid-gray}

label-padding = 1
click-left = nm-connection-editor

[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = true
interval = 2
format-volume = <ramp-volume> <label-volume>
format-muted = <label-muted>
label-volume = %percentage%%
label-muted = 
label-muted-foreground = ${colors.mid-gray}
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
label-padding = 1
click-left = pavucontrol

[module/hostuser]
type = custom/text
format =  {{ .chezmoi.hostname }} ({{ .chezmoi.username }})
content-foreground = ${colors.light-gray}
label-padding = 1


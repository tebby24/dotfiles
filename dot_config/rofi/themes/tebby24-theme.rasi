* {
    selected-normal-foreground:  rgba ( 255, 255, 255, 100 % );
    foreground:                  rgba ( 224, 224, 224, 100 % );
    normal-foreground:           @foreground;
    red:                         rgba ( 200, 50, 50, 100 % );
    selected-urgent-foreground:  rgba ( 255, 255, 255, 100 % );
    blue:                        rgba ( 128, 128, 128, 100 % );
    urgent-foreground:           rgba ( 255, 255, 255, 100 % );
    active-foreground:           rgba ( 193, 193, 193, 100 % );
    lightbg:                     rgba ( 117, 117, 117, 100 % );
    selected-active-foreground:  rgba ( 193, 193, 193, 100 % );
    background:                  rgba ( 12, 12, 12, 100 % );  /* darker background */
    bordercolor:                 rgba ( 39, 39, 39, 100 % );
    normal-background:           rgba ( 12, 12, 12, 100 % );
    lightfg:                     rgba ( 138, 138, 138, 100 % );
    selected-normal-background:  rgba ( 57, 57, 57, 100 % );
    border-color:                @foreground;
    spacing:                     2;
    separatorcolor:              rgba ( 30, 30, 30, 100 % );
    urgent-background:           rgba ( 19, 19, 19, 100 % );
    selected-urgent-background:  rgba ( 57, 57, 57, 100 % );
    background-color:            rgba ( 0, 0, 0, 0 % );
    active-background:           rgba ( 19, 19, 19, 100 % );
    selected-active-background:  rgba ( 57, 57, 57, 100 % );
}

window {
    background-color: @background;
    width: 400px;
    border:           0;  /* removed window border */
    padding:          5;
    border-radius: 20px;
}

mainbox {
    border:  0;
    padding: 0;
}

message {
    border:       1px solid;          /* solid border */
    border-color: @foreground;         /* same color as text */
    padding:      1px ;
}

textbox {
    text-color: @foreground;
}

listview {
    fixed-height: 0;
    border:       0px solid 0px 0px ;
    border-color: @separatorcolor;
    spacing:      2px ;
    scrollbar:    false;
    padding:      2px 0px 0px ;
    lines: 5;
}

element {
    border:  0;
    padding: 0px ;
}

element-text {
    background-color: inherit;
    text-color:       @normal-foreground;
}

element.normal.normal {
    background-color: @normal-background;
    text-color:       @normal-foreground;
}

element.normal.urgent {
    background-color: @urgent-background;
    text-color:       @urgent-foreground;
}

element.normal.active {
    background-color: @active-background;
    text-color:       @active-foreground;
}

element.selected.normal {
    background-color: @selected-normal-background;
    text-color:       @selected-normal-foreground;
}

element.selected.urgent {
    background-color: @selected-urgent-background;
    text-color:       @selected-urgent-foreground;
}

element.selected.active {
    background-color: @selected-active-background;
    text-color:       @selected-active-foreground;
}

scrollbar {
    width:        4px ;
    border:       0;
    handle-width: 8px ;
    padding:      0;
}

mode-switcher {
    border:       2px solid 0px 0px ;
    border-color: @separatorcolor;
}

button.selected {
    background-color: @selected-normal-background;
    text-color:       @selected-normal-foreground;
}

inputbar {
    spacing:    0;
    text-color: @normal-foreground;
    padding:    1px ;
}

case-indicator {
    spacing:    0;
    text-color: @normal-foreground;
}

entry {
    spacing:    0;
    text-color: @normal-foreground;
}

prompt {
    spacing:    0;
    text-color: @normal-foreground;
}

inputbar {
    children:   [ prompt,textbox-prompt-colon,entry,case-indicator ];
}

textbox-prompt-colon {
    expand:     false;
    str:        ":";
    margin:     0px 0.3em 0em 0em ;
    text-color: @normal-foreground;
}
